# FaultMaven Configuration

# Deployment Profile (core, team, enterprise)
PROFILE=core

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/faultmaven.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/faultmaven

# Redis (Session storage and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Full Redis URL (used by Docker)
REDIS_URL=redis://localhost:6379/0

# File Storage
FILE_STORAGE=local
FILE_STORAGE_PATH=./data/files
# For S3:
# FILE_STORAGE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=faultmaven-files
# AWS_REGION=us-east-1

# Vector Database (Knowledge base semantic search)
VECTOR_STORE=chromadb
CHROMADB_PATH=./data/chromadb
# ChromaDB Connection (for Docker)
CHROMA_HOST=localhost
CHROMA_PORT=8001
# For Pinecone:
# VECTOR_STORE=pinecone
# PINECONE_API_KEY=
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX_NAME=faultmaven

# Identity Provider
IDENTITY_PROVIDER=jwt
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM Provider
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# For OpenRouter or other OpenAI-compatible APIs:
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# For Together AI:
# OPENAI_BASE_URL=https://api.together.xyz/v1

# Alternative LLM Providers (not yet implemented)
# ANTHROPIC_API_KEY=
# OLLAMA_HOST=http://localhost:11434

# Application
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# CORS (Allow dashboard and development servers)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
