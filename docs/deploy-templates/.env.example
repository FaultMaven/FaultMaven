# FaultMaven Self-Hosted Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# REQUIRED: LLM Provider API Key
# ============================================================================
# You must configure ONE of the following LLM providers:

# OpenAI (GPT-4, GPT-3.5, etc.)
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Fireworks AI
FIREWORKS_API_KEY=

# ============================================================================
# REQUIRED: Security Configuration
# ============================================================================

# JWT Secret for authentication tokens
# Generate with: openssl rand -hex 32
JWT_SECRET=please-change-me-to-random-32-char-string

# ============================================================================
# APPLICATION PORTS (Optional - defaults shown)
# ============================================================================

# API Gateway port (public-facing)
API_PORT=8000

# Dashboard web UI port
DASHBOARD_PORT=3000

# Internal service ports (usually don't need to change)
AUTH_PORT=8001
SESSION_PORT=8002
CASE_PORT=8003
KNOWLEDGE_PORT=8004
EVIDENCE_PORT=8005
REDIS_PORT=6379

# ============================================================================
# AUTHENTICATION SETTINGS (Optional)
# ============================================================================

# JWT token expiration (minutes)
JWT_EXPIRE_MINUTES=60

# Refresh token expiration (days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# FILE UPLOAD LIMITS (Optional)
# ============================================================================

# Maximum file size for evidence uploads (MB)
MAX_FILE_SIZE_MB=10

# Maximum files per case
MAX_FILES_PER_CASE=20

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================

# Redis connection URL (internal Docker network)
REDIS_URL=redis://redis:6379

# Redis password (leave empty for no password)
REDIS_PASSWORD=

# ============================================================================
# LOGGING & DEBUGGING (Optional)
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed API logging (true/false)
DEBUG_MODE=false

# ============================================================================
# ADVANCED SETTINGS (Optional)
# ============================================================================

# Database connection pool size
DB_POOL_SIZE=5

# API request timeout (seconds)
REQUEST_TIMEOUT=30

# Enable CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# NOTES
# ============================================================================
#
# - Only JWT_SECRET and one LLM API key are required
# - All other settings have sensible defaults
# - For production, always use strong JWT_SECRET (32+ characters)
# - Keep this file secure and never commit it to Git
# - Restart services after changing .env: docker-compose restart
#
